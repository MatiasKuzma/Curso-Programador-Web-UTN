<h2 style="padding-left: 40%;padding-top: 3%;">Modificar usuario</h2>
<div style="padding-left: 35%; padding-top: 2%;">
  {{#if error}}
  <p style="color: red; padding-left: 10%">{{message}}</p>
  {{else}}
  <p style="color: green; padding-left: 10%">{{message}}</p>
  {{/if}}
  <form class="row g-3 caja-registro" action="/admin/configuraciones/updateUser" method="post">
  <input type="hidden" value="{{usuario.id}}" name="id">
    <div class="col-md-6">
      <label for="user" class="form-label">Usuario</label>
      <input type="text" class="form-control" id="user" name="user" value="{{usuario.user}}">
    </div>
    <div class="col-md-6">
      <label for="nombre" class="form-label">Nombre</label>
      <input type="text" class="form-control" id="nombre" name="nombre" value="{{usuario.nombre}}">
    </div>
    <div class="col-md-6">
      <label for="apellido" class="form-label">Apellido</label>
      <input type="text" class="form-control" id="apellido" name="apellido" value="{{usuario.apellido}}">
    </div>
    <div class="col-md-6">
      <label for="dni" class="form-label">DNI</label>
      <input type="text" class="form-control" id="dni" name="dni" value="{{usuario.dni}}">
    </div>
    <div class="col-md-6">
      <label for="telefono" class="form-label">Telefono</label>
      <input type="text" class="form-control" id="telefono" name="telefono" value="{{usuario.telefono}}">
    </div>
    <div class="col-12">
      <button type="submit" class="btn btn-primary">Actualizar</button>
    </div>
  </form>

</div>